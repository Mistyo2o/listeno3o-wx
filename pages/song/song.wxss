/* pages/song/song.wxss */
page{
    height: 100%;
    overflow: hidden;
}
.song-container{
   background-size: 750rpx 750rpx;
   width: 750rpx;
   min-height: 48%;
   filter:blur(20px);
   transform: scale(0.8); 
   position: absolute;
   box-shadow: 0px 0px 100px 600px rgb(47, 48, 54); 
   margin:  auto; 
   z-index: -1;
   overflow-x:hidden;
}
.song-content{
    height: 100%;
    display: flex;
    flex-direction: column;
}


.song-detailsCard{
    width: 750rpx;
    height: 400rpx;
    background: rgba(255, 255, 255, 0);
    margin: 0 auto;
    /* box-shadow: 0 2px 5px 0 rgb(0 0 0 / 16%), 0 2px 10px 0 rgb(0 0 0 / 12%); */
    transition: all 0.3s;
}
.song-cover{
    padding: 35px;
    text-align: center;
    float: left;
}
.song-cover image{
    width: 280rpx;
    height: 280rpx;
    border-radius: 25rpx;
}
.song-description{
    padding: 100rpx 40rpx;
    float: left;
    /* border-left: 2px solid #efefef; */
}
.title{
    font-size: 25px;
    font-weight: bold;
    font-family: system-ui;
    color: rgb(255, 255, 255);
}
.title-author{
    font-size: 28rpx;
    font-family: system-ui;
    margin-left: 10rpx;
    color: rgb(255, 255, 255);
}
.song-autho-image{
    height: 48rpx;
    width: 48rpx;
    border-radius: 50rpx;
    vertical-align: middle;
}
.song-actionbar{
   height: 100px;
   background-color: greenyellow;
}
.song-bar{
    height: 100rpx;
    width: 750rpx;
    background-color: rgb(255, 255, 255);
    display: flex;
    border-radius: 30px 0px 0px 0px;
    border: 1px solid rgb(255, 255, 255);
}
.song-count{
    width: 200rpx;
    height: 80rpx;
    margin-top: 18rpx;
    text-align: center;
    font-size: 34rpx;
    line-height: 69rpx;
    font-family: system-ui;
    margin-left: 50rpx;
}
.song-btn{
    width: 250rpx;
    height: 80rpx;
    margin-top: 20rpx;
    margin-left: auto;
}
.btn{
    width: 210rpx;
    height: 70rpx;
    background-color: #31c27c;
    border-radius: 28rpx;
    font-size: 26rpx;
}
.btn image{
    width: 58rpx;
    height: 58rpx;
    vertical-align: middle;
    margin: 3px 10rpx 10rpx 10rpx;
}
.song-list{
    display: flex;
    flex: 1;
    overflow: scroll;
    background-color: rgb(255, 255, 255);
}
.o3o-list-item {
    padding: 12px 0px 5px 15px;
    color: #000000d9;
}
.o3o-list-item-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 0;
    color: #000000d9;
}
.o3o-list-item-meta-avatar{
    margin-right: 16px;
}
.o3o-list-item-meta-content{
    flex: 1 0;
    width: 0;
    color: #000000d9;
}
.o3o-list-item-meta-title{
    margin-bottom: 4px;
    color: #000000d9;
    font-size: 32rpx;
    line-height: 1.5715;
}
.o3o-list-item-meta-description{
    color: #00000073;
    font-size: 24rpx;
    line-height: 1.5715;
}








